  margin-top: 64rpx;
  margin-bottom: 96rpx;
  display: flex;
  justify-content: space-between;
  width: 671rpx;
  height: 96rpx;
}

.footer .btn {
  font-size: 32rpx;
  text-align: center;
  line-height: 96rpx;
  width: 319rpx;
  height: 96rpx;
  border-radius: 6rpx;
  background: rgba(242, 242, 242, 1);
}

.footer .footer-2 {
  background-color: rgba(219, 168, 113, 1);
  color: #fff;
}