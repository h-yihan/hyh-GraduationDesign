/* pages/remarks/remarks.wxss */
.body {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 文本域 */
.input {
  /* 边框 */
  padding: 20rpx;
  width: 646rpx;
  height: 296rpx;
  background-color: rgba(249, 250, 249, 1);
  font-size: 32rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
}

/* 快捷输入 */
.kjsr {
  width: 686rpx;
  height: 126rpx;
  line-height: 126rpx;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

/* 快捷输入-提示 */
.point-out {
  display: flex;
  width: 686rpx;
  flex-wrap: wrap;
}

.point-out .point-out-1 {
  padding: 0rpx 20rpx;
  height: 66rpx;
  font-size: 28rpx;
  line-height: 66rpx;
  color: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(231, 231, 231, 1);
  border-radius: 8rpx;  
  margin-right: 20rpx;
}

/* 提交按钮 */
.button {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 160rpx;
  background-color: #fff;
}

.button .btn {
  width: 670rpx;
  height: 96rpx;
  background-color: rgba(206, 206, 206, 1);
  font-size: 28rpx;
  line-height: 56rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}