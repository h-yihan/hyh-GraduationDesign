/* pages/location/location.wxss */


/* 地图 */
.map {
  width: 750rpx;
  height: 456rpx;
  background-color: rgba(216, 216, 216, 1);
}

/* 搜索框 */
.search {
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  margin-top: 32rpx;
  width: 620rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background-color: rgba(246, 246, 246, 1);
  margin-bottom: 32rpx;
}

.search-jpg {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

input {
  width: 550rpx;
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align:left;
}

/* 地址 */
.address {
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 710rpx;
  height: 148rpx;
  border-bottom: 1px solid rgba(246, 246, 246, 1);
}

.address-1 {
  left: 0px;
  height: 40rpx;
  font-size: 32rpx;
  line-height: 40rpx;
}

.address-2 {
  left: 0px;
  top: 44px;
  width: 380px;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}

/* 确定按钮 */
.button {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 160rpx;
  background-color: #fff;
}

.button .btn {
  width: 670rpx;
  height: 96rpx;
  background-color: rgba(52, 52, 52, 1);
  font-size: 28rpx;
  line-height: 56rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}