/* pages/chooseStore_search/chooseStore_search.wxss */
.head {
  display: flex;
  width: 670rpx;
  height: 72rpx;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
}

.search {
  display: flex;
  align-items: center;
  width: 562rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background-color: rgba(246, 246, 246, 1);
}

.search .search-image {
  padding-left: 20rpx;
  margin-right: 30rpx;
  width: 38rpx;
  height: 40rpx;
}

.search .search-text,
.head .search-text {
  font-size: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
}

.search-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 148rpx;
  border-bottom: 1rpx solid rgba(246, 246, 246, 1);
}

.search-content .search-content-middle {
  display: flex;
  justify-content: space-between;
  width: 670rpx;
  height: 84rpx;
}

.search-content .search-content-middle .content-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.search-content .search-content-middle .content-left .content-left-1 {
  font-size: 32rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.search-content .search-content-middle .content-left .content-left-2,
.search-content .search-content-middle .content-right {
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.4);
}
