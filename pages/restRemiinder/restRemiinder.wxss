/* pages/restRemiinder/restRemiinder.wxss */
.background {
  position: relative;
  height: 100vh;
  background-color: rgb(218, 208, 208);
}

.bgc-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: absolute;
  left: 56rpx;
  top: 200rpx;
  width: 638rpx;
  height: 957rpx;
}

/* 门店休息提示 */
.bgc-container .remid {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 638rpx;
  height: 749rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 1);
}

.bgc-container .remid .remid-title {
  font-size: 32rpx;
  height: 40rpx;
  font-weight: 600;
  margin-top: 313rpx;
}

.bgc-container .remid .business-hours {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 172rpx;
}

.bgc-container .remid .business-hours .business-hours-text {
  font-size: 28rpx;
  line-height: 46rpx;
  color: rgba(0, 0, 0, 0.5);
}

.bgc-container .remid .btn {
  margin-top: 64rpx;
  display: flex;
  justify-content: space-between;
  width: 536rpx;
  height: 80rpx;
}

.bgc-container .remid .btn .btn-1 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 256rpx;
  height: 80rpx;
  background-color: rgba(242, 242, 242, 1);
  font-size: 32rpx;
  border-radius: 8rpx;
}

.bgc-container .remid .btn .btn-1.btn-2 {
  background-color: rgba(219, 168, 113, 1);
  color: rgba(254, 255, 254, 1);
}

/* 开启提醒通知 */
.bgc-container .open {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 32rpx;
  width: 638rpx;
  height: 176rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 1);
}

.bgc-container .open .open-left {
  display: flex;
  flex-direction: column;
  width: 417rpx;
  height: 112rpx;
}
.bgc-container .open .open-left .open-left-1{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 40rpx;
  font-weight: 600;
}
.bgc-container .open .open-left .open-left-image {
width: 25rpx;
height: 25rpx;
margin-right: 10rpx;
}
.bgc-container .open .open-left .open-left-2{
  padding-left: 35rpx;
  margin-top: 10rpx;
  line-height: 35rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.3);
}
.bgc-container .open .open-right {
  display: flex;
  flex-direction: column;
  width: 157rpx;
  height: 176rpx;
  border-left: 1rpx solid rgba(238, 238, 238, 1);
}
.bgc-container .open .open-right .open-btn.open-btn-1{
  height: 90rpx;
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
  color: rgba(0, 0, 0, 0.8);
}
.bgc-container .open .open-right .open-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 157rpx;
  height: 87rpx;
  color: rgba(0, 0, 0, 0.3);
  font-size: 24rpx;
}