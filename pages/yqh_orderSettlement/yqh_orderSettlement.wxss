/* pages/yqh_orderSettlement/yqh_orderSettlement.wxss */
page {
  background-color: rgba(245, 245, 245, 1);
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 456rpx;
}

.head .head-1 {
  font-size: 56rpx;
  line-height: 100rpx;
}

.head .head-2 {
  font-size: 28rpx;
}

.head .head-3 {
  margin-top: 82rpx;
  width: 516rpx;
  height: 80rpx;
  border-radius: 38rpx;
  background: rgba(219, 168, 113, 1);
  text-align: center;
}

.head .head-3 .head-3-1 {
  font-size: 30rpx;
  color: rgba(254, 255, 254, 1);
  line-height: 80rpx;
}

.ziQu {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  width: 702rpx;
  height: 148rpx;
  border-radius: 16rpx;
  background-color: rgba(254, 255, 254, 1);
}

.ziQu .address {
  font-size: 28rpx;
  line-height: 40rpx;
}

.ziQu .distance {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.3);
}

.ziQu .ziQu-image {
  width: 12rpx;
  height: 24rpx;
}

.diandan {
  margin-top: 24rpx;
  box-sizing: border-box;
  padding: 32rpx 40rpx;
  width: 702rpx;
  height: 217rpx;
  border-radius: 16rpx;
  background-color: rgba(254, 255, 254, 1);
}

.diandan .diandan-1 {
  display: flex;
  height: 56rpx;
  border-bottom: 1rpx solid rgba(240, 240, 240, 0.5);
}

.diandan .diandan-text {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.3);
}

.diandan .user {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  height: 56rpx;
}

.diandan .user .user-headPortrait {
  margin-right: 20rpx;
  margin-top: 3rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(216, 216, 216, 1);
}

.diandan .user .user-petNmae {
  font-size: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
}

.diandan .user .user-btn {
  font-size: 22rpx;
  color: rgba(219, 168, 113, 1);
  line-height: 50rpx;
  text-align: center;
  width: 152rpx;
  height: 50rpx;
  border-radius: 28rpx;
  border: 2rpx solid rgba(219, 168, 113, 1);
}

.footer {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 160rpx;
  background-color: rgba(240, 240, 240, 1);
}

.footer .footer-left {
  margin-left: 32rpx;
  display: flex;
  flex-direction: column;
  width: 550rpx;
  height: 100rpx;
}

.footer .footer-left .left-1 {
  font-size: 34rpx;
  line-height: 60rpx;
}

.footer .footer-left .left-2 {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.5);
  line-height: 40rpx;
}

.footer .footer-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 100rpx;
  background-color: rgba(188, 188, 188, 1);
}

.footer .footer-btn .btn-text {
  font-size: 32rpx;
  color: rgba(254, 255, 254, 1);
}