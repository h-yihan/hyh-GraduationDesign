/* pages/ShoppingBagUnfolding/ShoppingBagUnfolding.wxss */

/*设置label的样式*/
label {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.8);
}

/* 改变多选框样式 */
checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}


/* 选中后的背景样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: rgba(52, 52, 52, 1);
  background-color: rgba(52, 52, 52, 1);
}

/* 选中后的勾子样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FFF;
}

.shoppingBag-unfoling {
  position: relative;
  padding: 0rpx 32rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  background-color: #FFF;
  margin-bottom: 201rpx;
  border-bottom: 1px solid rgba(238, 238, 238, 1);
}

/* 全选-清空购物袋 */
.shoppingBag-unfoling .shoppingBag-unfoling-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 2rpx;
  width: 686rpx;
  height: 72rpx;
}

.shoppingBag-unfoling .shoppingBag-unfoling-1 .shoppingBag-unfoling-1-right {
  display: flex;
  align-items: center;

}

.shoppingBag-unfoling .shoppingBag-unfoling-1 .shoppingBag-unfoling-1-right .shoppingBag-unfoling-1-right-image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 5rpx;
}

.shoppingBag-unfoling .shoppingBag-unfoling-1 .shoppingBag-unfoling-1-right .shoppingBag-unfoling-1-right-text {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
}

/* 门店订单-自提外送 */
.shoppingBag-unfoling .shoppingBag-unfoling-2 {
  display: flex;
  align-items: center;
  width: 686rpx;
  height: 112rpx;
}

/* 自提/外送 */
.shoppingBag-unfoling .shoppingBag-unfoling-2 .shoppingBag-unfoling-2-right {
  margin-left: 10rpx;
  width: 97rpx;
  height: 32rpx;
  line-height: 35rpx;
  text-align: center;
  border: 1px solid rgba(219, 168, 113, 1);
  font-size: 18rpx;
  color: rgba(219, 168, 113, 1);
}

/* 商品详情 */
.shoppingBag-unfoling .shoppingBag-unfoling-3 {
  display: flex;
  width: 686rpx;
  height: 147rpx;
  margin-bottom: 32rpx;
}

/* 商品详情-实物图 */
.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-middle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8px;
  background: rgba(216, 216, 216, 1);
}

/* 商品详细信息-名字-描述-价格 */
.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 36rpx;
  width: 482rpx;
  height: 147rpx;
}

.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-1 {
  font-size: 32rpx;
  line-height: 40rpx;
}

.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-2 {
  height: 40rpx;
  font-size: 22rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.3);
}

.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-3 {
  display: flex;
  justify-content: space-between;
  width: 450rpx;
  height: 48rpx;
}

.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-3 .shoppingBag-unfoling-3-left-3-left {
  height: 48rpx;
  font-size: 32rpx;
  line-height: 40rpx;
}

.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-3 .shoppingBag-unfoling-3-left-3-right {
  width: 180rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-3 .shoppingBag-unfoling-3-left-3-right .add,
.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-3 .shoppingBag-unfoling-3-left-3-right .minus {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(254, 255, 254, 1);
  border: 1rpx solid rgba(224, 224, 224, 1);
}

.shoppingBag-unfoling .shoppingBag-unfoling-3 .shoppingBag-unfoling-3-right .shoppingBag-unfoling-3-right-3 .shoppingBag-unfoling-3-left-3-right .add {
  background-color: rgba(214, 168, 113, 1);
  border: 1rpx solid rgba(214, 168, 113, 1);

}

/* 底部 */
.footer {
  display: flex;
  width: 750rpx;
  height: 79rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}

.footer .footer-left {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 520rpx;
  height: 79rpx;
  background: rgba(240, 240, 240, 1);
}

.footer .footer-left .footer-left-1 {
  height: 40rpx;
  font-size: 34rpx;
  line-height: 40rpx;
}

.footer .footer-left .footer-left-2 {
  height: 28rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: rgba(0, 0, 0, 0.5);
}

.footer .footer-right {
  font-size: 32rpx;
  color: #FFF;
  text-align: center;
  line-height: 79rpx;
  width: 210rpx;
  height: 79rpx;
  background-color: rgba(219, 168, 113, 1);
}