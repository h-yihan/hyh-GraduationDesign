/* pages/chooseStore/chooseStore.wxss */

.body {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(245, 245, 245, 1);
  box-sizing: border-box;
}

/* 导航 */
.nav {
  display: flex;
  justify-content: space-between;
  width: 750rpx;
  height: 96rpx;
  margin-bottom: 1rpx;
  background-color: rgba(255, 255, 255, 1);
}

.nav .nav-left,
.nav .nav-right {
  text-align: center;
  font-style: 32rpx;
  line-height: 96rpx;
  width: 375rpx;
  height: 96rpx;
  color: rgba(0, 0, 0, 0.5);
}

.nav .nav-left text {
  padding-bottom: 22rpx;
  color: rgba(219, 168, 113, 1);
  border-bottom: 1px solid rgba(219, 168, 113, 1);
}

/* 地址-搜索框 */
.address-search {
  background-color: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 670rpx;
  height: 104rpx;
  padding: 0 40rpx 0 40rpx;
}

.address-search .address {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.address-search .address .address-1 {
  margin-right: 10rpx;
}

.address-search .address .address-2 {
  width: 24rpx;
  height: 24rpx;
}

/* 搜索框 */
.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  width: 140rpx;
  height: 72rpx;
  border-radius: 46rpx;
  background-color: rgba(246, 246, 246, 1);
}

.search-jpg {
  width: 32rpx;
  height: 32rpx;
}

input {
  width: 56rpx;
  font-size: 28rpx;
}

.body .map-button {
  width: 750rpx;
  height: 72rpx;
  font-weight:400;
  font-size: 24rpx;
  background-color: #fff;

}

/* 收货地址 */
.deliveryAddress {
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  border-radius: 18rpx;
  width: 686rpx;
  height: 309rpx;
  background-color: #ffffff;
}

.deliveryAddress-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 440rpx;
  padding-right: 40rpx;
  height: 229rpx;
  border-right: 1rpx solid rgba(245, 245, 245, 1);
}

.deliveryAddress-left .deliveryAddress-left-1 {
  height: 40rpx;
  font-size: 32rpx;
  line-height: 40rpx;
}

.deliveryAddress-left .deliveryAddress-left-2 {
  display: flex;
  font-size: 18rpx;
  line-height: 28rpx;
  height: 28rpx;
  border-radius: 14px;
  background-color: rgba(240, 240, 240, 1);
}

.deliveryAddress-left .deliveryAddress-left-2 .box {
  width: 20rpx;
  height: 28rpx;
  background-color: rgba(165, 215, 133, 1);
  margin-right: 10rpx;
  border-radius: 14px;
}

.deliveryAddress-left .deliveryAddress-left-3 {
  display: flex;
  height: 64rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: rgba(0, 0, 0, 0.5);
}

.deliveryAddress-left .deliveryAddress-left-3 .deliveryAddress-left-3-image {
  margin-top: 3rpx;
  width: 24rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.deliveryAddress-left .deliveryAddress-left-4 {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.5);
}

.deliveryAddress-left .deliveryAddress-left-4 .deliveryAddress-left-4-image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.deliveryAddress-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 109rpx;
  height: 229rpx;
}

.deliveryAddress-right .deliveryAddress-right-1 {
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
}

.deliveryAddress-right .deliveryAddress-right-2 {
  font-size: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
  color: rgba(0, 0, 0, 0.5);
}